<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#BBDEFB"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:elevation="4dp">

    <TextView
        android:id="@+id/questionText"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>

    <TextView android:id="@+id/optionA" style="@style/OptionStyle" android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/optionB" style="@style/OptionStyle" android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/optionC" style="@style/OptionStyle" android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/optionD" style="@style/OptionStyle" android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
